# Configuración para producción con Docker
NODE_ENV=production
PORT=4000

# Base de datos SQLite (por defecto)
DATABASE_URL="file:./dev.db"

# Para usar PostgreSQL, descomenta y configura:
# DATABASE_URL="postgresql://ecouser:ecopass@postgres:5432/ecoevents"

# JWT Secret (cambiar en producción)
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui

# Configuración de email (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_password_de_aplicacion

# CORS Origins (ajustar según tus dominios)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://tu-dominio.com
